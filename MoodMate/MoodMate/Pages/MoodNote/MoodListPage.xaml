<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"      
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:MoodMate.ViewModels"
             x:DataType="model:MoodListViewModel"
             x:Class="MoodMate.Pages.MoodNote.MoodListPage"
             xmlns:entity="clr-namespace:MoodMate.Components.Entities"
             BackgroundColor="#f2f2f2">
    
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Loaded"
                                        Command="{Binding UpdateMoodNoteCommand}"/>
    </ContentPage.Behaviors>
    
    <Grid Padding="10" 
          RowDefinitions="*,100">

        <CollectionView Grid.Row="0"
                        Grid.RowSpan="2"
                        ItemsSource="{Binding MoodNotes}">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"                                           
                                   ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="entity:MoodNote">
                    <Border BackgroundColor="White" 
                            StrokeThickness="0.3">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType=
                                {x:Type model:MoodListViewModel}}, Path=PopupCommand}"
                                                  CommandParameter="{Binding}"/>
                        </Border.GestureRecognizers>

                        <Grid Grid.RowDefinitions="70,*"
                              Padding="10"
                              RowSpacing="5"
                              MaximumHeightRequest="320">

                            <Grid Grid.Row="0"
                                  Grid.ColumnDefinitions="70,*"
                                  ColumnSpacing="10">

                                <Image Source="{Binding Mood.Source}"
                                       Grid.Column="0"/>

                                <Grid Grid.RowDefinitions="40,20"
                                      Grid.Column="1">

                                    <Label Text="{Binding Mood.Name}" 
                                           Grid.Row="0" 
                                           TextColor = "#2b5e4c"
                                           FontSize="28"  
                                           VerticalOptions="Center"
                                           FontFamily="OpenSansBold"/>

                                    <Grid Grid.Row="1"
                                          Grid.ColumnDefinitions="16,*"
                                          ColumnSpacing="5">

                                        <Image Source="time.png"
                                               Grid.Column="0"/>

                                        <Label Text="{Binding Path=Date, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}" 
                                               TextColor="#4C4C4C"
                                               FontSize="14"
                                               VerticalOptions="Center"
                                               Grid.Column="1"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <Label Text="{Binding Text}" 
                                   Grid.Row="1" 
                                   LineBreakMode="CharacterWrap"                       
                                   TextColor = "#4C4C4C" 
                                   FontSize="16"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border BackgroundColor="#4e8973"
                StrokeThickness="0"
                Grid.Row="1"
                WidthRequest="50"
                HorizontalOptions="End">
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25"/>
            </Border.StrokeShape>
            
            <Grid RowDefinitions="50,50">

                <Image Source="loop.png"
                       Grid.Row="0"
                       Scale="0.7">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToAnalysisMoodPageCommand}"/>
                    </Image.GestureRecognizers>
                </Image>

                <Image Source="plus.png"
                       Grid.Row="1"
                       Scale="0.7">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToChooseMoodPageCommand}"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>

    </Grid>
</ContentPage>